to thingy :size
  if :size < 1 [ stop ]
  fd :size
  rt 90
  fd :size
  lt 90
  thingy :size * 0.5
  rt 180
  fd :size
  rt 90
  fd :size
  rt 90
end
to line :size1 :size2
  fd :size1
  thingy :size2
end
to finish :size1 :size2
  repeat 4 [
    line :size1 :size2
    lt 90
  ]
end
to stuff :size1 :size2
  window clearscreen pu bk :size1/2 pd
  finish :size1 :size2
end
stuff 200 64
